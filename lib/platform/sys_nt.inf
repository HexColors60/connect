; HKEY_LOCAL_MACHINE\SYSTEM\CurrentControlSet\Control\Class
Class       = NetService
ClassGUID   = {4D36E974-E325-11CE-BFC1-08002BE10318}
Provider    = %Cnct%
DriverVer   = 01/23/2013,1.0.0.1
CatalogFile = pf.cat

[Manufacturer]
%Cnct%=CNCT.NTamd64, NTAMD64

;[CNCT.NTx86]
